@{
    Layout = null;
    var pageTitle = BreezeShop.Core.DataProvider.GlobeInfo.WebSetting.Name + "电商管理后台";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <title>@pageTitle</title>
    <!-- basic styles -->
    <link href="@Url.Content("~/Areas/Admin/Content/css/bootstrap.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/font-awesome.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/content/css/ace-fonts.css")" />
    @RenderSection("headerbeforeace", false)
    <!-- ace styles -->
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/ace.css")"/>

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/ace-part2.css")" class="ace-main-stylesheet" />
    <![endif]-->
    <!--[if lte IE 9]>
      <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/ace-ie.css")" />
    <![endif]-->

    <script src="@Url.Content("~/Areas/Admin/Content/js/ace-extra.js")" type="text/javascript"></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!--[if lte IE 8]>
        <script src="@Url.Content("~/Areas/Admin/Content/js/html5shiv.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Areas/Admin/Content/js/respond.js")" type="text/javascript"></script>
    <![endif]-->

    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='@Url.Content("~/Areas/Admin/Content/js/jquery.js")'>" + "<" + "/script>");
    </script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script type="text/javascript">
        window.jQuery || document.write("<script src='@Url.Content("~/Areas/Admin/Content/js/jquery1x.js")'>"+"<"+"/script>");
    </script>
    <![endif]-->

</head>
<body class="no-skin">
    <div class="navbar navbar-default" id="navbar">
        <script type="text/javascript">
            try { ace.settings.check('navbar', 'fixed'); } catch (e) { }
        </script>
        <div class="navbar-container" id="navbar-container">
            <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
                <span class="sr-only">Toggle sidebar</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <div class="navbar-header pull-left">
                <a href="javascript:;" class="navbar-brand">
                    <small>
                        <i class="icon-cloud"></i>
                        @pageTitle
                    </small>
                </a><!-- /.brand -->
            </div><!-- /.navbar-header -->

            <div class="navbar-buttons navbar-header pull-right" role="navigation">
                <ul class="nav ace-nav">
                    <li class="light-blue">
                        <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                            <img class="nav-user-photo" src="@Url.Content("~/Areas/Admin/Content/avatars/avatar2.png")" alt="@ViewData["UserName"]" />
                            <span class="user-info">
                                <small>欢迎,</small>
                                @ViewData["UserName"]
                            </span>
                            <i class="ace-icon fa fa-caret-down"></i>
                        </a>
                        <ul class="user-menu dropdown-menu-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">
                            <li>
                                <a href="@Url.Action("Edit","Member",new {area="Admin",id=0, redirectUrl =""})">
                                    <i class="ace-icon fa fa-user"></i>
                                    我的信息
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("Exit", "Login")">
                                    <i class="ace-icon fa fa-power-off"></i>
                                    退出
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul><!-- /.ace-nav -->
            </div><!-- /.navbar-header -->
        </div><!-- /.container -->
    </div>
    <div class="main-container" id="main-container">
        <script type="text/javascript">
            try {
                ace.settings.check('main-container', 'fixed');
            } catch (e) { }
        </script>

        <div id="sidebar" class="sidebar responsive">
            <script type="text/javascript">
                try {
                    ace.settings.check('sidebar', 'fixed');
                } catch (e) { }
            </script>
            @Html.Action("LeftNav", "Home")
            <!-- #section:basics/sidebar.layout.minimize -->
            <div class="sidebar-toggle sidebar-collapse" id="sidebar-collapse">
                <i class="ace-icon fa fa-angle-double-left" data-icon1="ace-icon fa fa-angle-double-left" data-icon2="ace-icon fa fa-angle-double-right"></i>
            </div>
            <!-- /section:basics/sidebar.layout.minimize -->
            <script type="text/javascript">
                try { ace.settings.check('sidebar', 'collapsed') } catch (e) { }
            </script>

        </div>
            <div class="main-content">
                <div class="breadcrumbs" id="breadcrumbs">
                    <script type="text/javascript">
                        try {
                            ace.settings.check('breadcrumbs', 'fixed');
                        } catch (e) { }
                    </script>
                    @RenderSection("breadcrumb")
                </div>
                <div class="page-content">
                    <div class="page-header">
                        @RenderSection("pageheader")
                        <script type="text/javascript">
                            if ($(".page-header:has('h1')").length <= 0) {
                                $(".page-header").remove();
                            }
                        </script>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            @if (TempData["error"] != null)
                            {
                                <div class="alert alert-danger">
                                    <button type="button" class="close" data-dismiss="alert">
                                        <i class="icon-remove"></i>
                                    </button>
                                    <strong>
                                        <i class="icon-remove"></i>
                                        错误!
                                    </strong>
                                    @TempData["error"]
                                </div>
                            }
                            @if (TempData["success"] != null)
                            {
                                <div class="alert alert-success">
                                    <button type="button" class="close" data-dismiss="alert">
                                        <i class="icon-remove"></i>
                                    </button>
                                    <p>
                                        <strong>
                                            <i class="icon-ok"></i>
                                            成功!
                                        </strong>
                                        @TempData["success"]
                                    </p>
                                </div>
                            }
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
                <div class="footer">
                <div class="footer-inner">
                <!-- #section:basics/footer -->
                <div class="footer-content">
                    <span class="bigger-120">
                        @pageTitle © 2014-2016
                    </span>
                </div>

                <!-- /section:basics/footer -->
            </div>
        </div>
                <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse display">
                    <i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
                </a>
    </div>
    <script type="text/javascript">
        if ("ontouchend" in document) document.write("<script src='@Url.Content("~/Areas/Admin/content/js/jquery.mobile.custom.js")'>" + "<" + "/script>");
    </script>
    <script src="@Url.Content("~/Areas/Admin/Content/js/bootstrap.js")" type="text/javascript"></script>
    <!--[if lte IE 8]>
          <script src="@Url.Content("~/Areas/Admin/Content/js/excanvas.js")" type="text/javascript"></script>
    <![endif]-->
    @RenderSection("specificscripts", false)
    <!-- ace scripts -->
    <script src="@Url.Content("~/Areas/Admin/Content/js/ace-elements.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/js/ace.js")" type="text/javascript"></script>
    @RenderSection("inlinescripts", false)
</body>
</html>
