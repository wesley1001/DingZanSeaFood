@model List<Yun.Trade.MonthTradeStatistics>

@{
    ViewBag.Title = "MonthSalesStatistics";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="@Url.Action("Index","Home")">首页</a>
        </li>
        <li class="active">月销售报表</li>
    </ul>
}

@section pageheader{
    <h1>
        月销售报表
    </h1>
}

<div class="table-responsive">
    <div class="dataTables_wrapper">
        <div class="row">
            <form method="GET" action="@Url.Action("MonthSalesStatistics", "Report", new { area = "Admin" })" class="col-sm-12">
                <div class="space-4"></div>
                <div class="form-inline">
                    <div class="form-group">年份：</div>
                    <div class="form-group">
                        @Html.DropDownList("year", new List<SelectListItem>
                        {
                            new SelectListItem{Text = "2016", Value = "2016", Selected = Request.QueryString["year"]=="2016"}
                        })
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-inline">
                    <button class="btn btn-purple btn-sm" type="submit">
                        <i class="icon-search icon-on-right bigger-110"></i>
                        搜索
                    </button>
                </div>
            </form>
        </div>
        <table id="sample-table-2" class="table table-bordered bought-table dataTable">
            <thead>
                <tr>
                    <th>月份</th>
                    <th>交易笔数</th>
                    <th>购买数量</th>
                    <th>在线支付</th>
                    <th>积分卡积分</th>
                    <th>总销售额</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Month</td>
                        <td>@m.SaleQuantity</td>
                        <td>@m.SaleNum</td>
                        <td>@m.OnlinePayment</td>
                        <td>@m.PrepaidCardPayment</td>
                        <td>@m.SalePrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


