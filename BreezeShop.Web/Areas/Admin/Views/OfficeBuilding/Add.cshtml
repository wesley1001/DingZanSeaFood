@model BreezeShop.Web.Areas.Admin.Models.UpdateCityModel
@{
    ViewBag.Title = "新增写字楼";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index","Home")">首页</a>
        </li>

        <li>
            <a href="@Url.Action("Index")">写字楼设置</a>
        </li>
        <li class="active">新增写字楼</li>
    </ul>
}

@section pageheader{
    <h1>
        新增写字楼
    </h1>
}

<div class="col-xs-12">
    @using (Html.BeginForm("Add", "OfficeBuilding", FormMethod.Post, new {@class = "form-horizontal", enctype = "multipart/form-data"}))
    {
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="Name">分类名称：</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Name, new {@class = "col-xs-12 col-sm-5", placeholder = "请输入分类名称"})
                <div class="help-block">@Html.ValidationMessageFor(m => m.Name)</div>
            </div>
        </div>
        <div class="space-4"></div>
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="Sort"> 排序 </label>

            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Sort, new {@class = "input-sm", placeholder = "请输入排序"})
                <div class="help-block">@Html.ValidationMessageFor(m => m.Sort)</div>
            </div>
        </div>
    <div class="space-4"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="State"> 状态 </label>

        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.State, new { @class = "input-sm", placeholder = "请输入状态" })
            <div class="help-block">@Html.ValidationMessageFor(m => m.State)</div>
        </div>
    </div>
        <div class="space-4"></div>
        <div class="form-group">
            <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="Ext">写字楼具体位置：</label>
            <div class="col-xs-12 col-sm-9">
                <div class="clearfix">
                    @Html.TextBoxFor(m => m.Ext, new {@class = "input-xxlarge"})
                </div>
            </div>
        </div>
        <div class="space-4"></div>

        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="submit">
                    <i class="icon-ok bigger-110"></i>提交
                </button>
                &nbsp; &nbsp; &nbsp;
                <button class="btn" type="reset">
                    <i class="icon-undo bigger-110"></i>重置
                </button>
            </div>
        </div>
    }
</div>
