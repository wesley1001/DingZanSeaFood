@model BreezeShop.Web.Areas.Admin.Models.LogInModel
@{
    Layout = null;
    var pageTitle = "管理员登录";
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <title>@pageTitle</title>
    <!-- basic styles -->
    <link href="@Url.Content("~/Areas/Admin/Content/css/bootstrap.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/font-awesome.css")" />

    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/content/css/ace-fonts.css")" />
    <!-- ace styles -->
    <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/ace.css")" />

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/ace-part2.css")" class="ace-main-stylesheet" />
    <![endif]-->
    <!--[if lte IE 9]>
      <link rel="stylesheet" href="@Url.Content("~/Areas/Admin/Content/css/ace-ie.css")" />
    <![endif]-->

    <script src="@Url.Content("~/Areas/Admin/Content/js/ace-extra.js")" type="text/javascript"></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lte IE 8]>
        <script src="@Url.Content("~/Areas/Admin/Content/js/html5shiv.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Areas/Admin/Content/js/respond.js")" type="text/javascript"></script>
    <![endif]-->
    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='@Url.Content("~/Areas/Admin/Content/js/jquery.js")'>" + "<" + "/script>");
    </script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script type="text/javascript">
     window.jQuery || document.write("<script src='@Url.Content("~/Areas/Admin/Content/js/jquery1x.js")'>"+"<"+"/script>");
    </script>
    <![endif]-->

</head>
<body class="login-layout light-login">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-leaf green"></i>
                                <span class="red">@BreezeShop.Core.DataProvider.GlobeInfo.WebSetting.Name</span>
                                <span class="white" id="id-text2">电商管理后台</span>
                            </h1>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="ace-icon fa fa-coffee green"></i>
                                            请输入您的登录信息
                                        </h4>

                                        <div class="space-6"></div>

                                        <form method="POST" action="@Url.Action("Index", "Login", new { returnurl = Request.QueryString["returnurl"] })">
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "用户名" })
                                                        <i class="ace-icon fa fa-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密码" })
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">登录</span>
                                                    </button>
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>
                                    </div><!-- /.widget-main -->
                                </div><!-- /.widget-body -->
                            </div><!-- /.login-box -->

                        </div><!-- /.position-relative -->
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
</body>
</html>
