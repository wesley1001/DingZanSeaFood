@model BreezeShop.Core.Model.WebSetting
@{
    ViewBag.Title = "网站设置";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index","Home")">首页</a>
        </li>
        <li class="active">基本信息设置</li>
    </ul>
}

@section pageheader{
    <h1>
        基本信息设置
    </h1>
}

@using (Html.BeginForm("WebSetting", "Setting", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="Title">标题：</label>
        <div class="col-xs-12 col-sm-9">
            <div class="clearfix">@Html.TextBoxFor(m => m.Name, new {@class = "input-xxlarge", placeholder = "网站名称"})</div>
            <div class="help-block">@Html.ValidationMessageFor(m => m.Name)</div>
        </div>
    </div>
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="ace-icon fa fa-check bigger-110"></i>提交
            </button>
        </div>
    </div>
}