@using BreezeShop.Web.Helper
@model BreezeShop.Core.PageModel<Yun.WeiXin.RuleDomain>

@{
    ViewBag.Title = "基本文字回复";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb{
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index","Home")">首页</a>
        </li>
        <li class="active">基本文字回复</li>
    </ul>
}

@section pageheader{
    <h1>
        基本文字回复
    </h1>
}

<p>
    <a class="btn" href="@Url.Action("AddTextReply")">
        <i class="ace-icon fa fa-plus align-top  bigger-125"></i>
        添加基本文字回复
    </a>
</p>

<div class="table-header">
    基本文字回复列表
</div>

<div class="table-responsive">
    <div class="dataTables_wrapper">
        <div class="row">
            <form method="GET" action="@Url.Action("TextReply", "WeChat", new { area = "Admin" })" class="col-sm-12">
                <div class="form-inline">
                    <div class="form-group">规则名称：</div>
                    <div class="form-group"><input type="text" name="title" class="input-large" value="@Request.QueryString["title"]"></div>
                    <button type="submit" class="btn btn-purple btn-sm">
                        <i class="icon-search icon-on-right bigger-110"></i>
                        搜索
                    </button>
                </div>
            </form>
        </div>
        <table class="table table-striped table-bordered table-hover dataTable">
            <thead>
            <tr>
                <th>编号</th>
                <th>规则名字</th>
                <th>状态</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var r in Model.Items)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>@(r.Status==1?"启用":"禁用")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-xs btn-info" href="@Url.Action("AddTextReply", new { id = r.Id })">
                                编辑
                            </a>
                            <a class="btn btn-xs btn-danger delete" href="@Url.Action("DeleteTextReply", new {id = r.Id})">
                                删除
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        @Html.Pager("PagerBottom", Model.CurrentPage, Model.TotalItems, "_PagerTemplate", 20)
    </div>
</div>

@section specificscripts{
    <script src="@Url.Content("~/areas/admin/Content/js/bootbox.js")"></script>
}


@section inlinescripts{
    <script type="text/javascript">
        jQuery(function ($) {
            $(".delete").click(function () {
                var url = $(this).attr("href");
                var link = this;
                bootbox.confirm("确定要删除吗?", function (result) {
                    if (result) {
                        $.post(url, function (r) {
                            if (r) {
                                $(link).closest("tr").remove();
                            } else {
                                bootbox.alert("删除失败");
                            }
                        });
                    }
                });
                return false;
            });
        });
    </script>
}