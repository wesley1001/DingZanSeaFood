@model List<Yun.Logistics.UserAddress>
@{
    ViewBag.Title = "地址管理";
}

<header class="header">
    <div class="left">&nbsp;</div>
    <div class="center">地址管理</div>
    <div class="right">@Html.ActionLink("新地址", "AdderssEdit")</div>
</header>

@foreach (var m in Model)
{
    <a href="@Url.Action("AdderssEdit",new {id = m.Id})">
        <div class="edit-address edit">
            <p>
                @m.Name
                @if (m.IsDefault)
                {
                    <em class="red">(默认地址)</em>
                }
            </p>
            <p>@m.Mobile</p>
            <p>@m.Province @m.City @m.Area @m.Street</p>
        </div>
    </a>
}